# XサーバーVPS環境設定ファイル
# 本番環境用の設定テンプレート

# データベース接続情報
DB_HOST=localhost
DB_USER=kakeibo_user
DB_PASSWORD=your_secure_password_here
DB_NAME=kakeibo_db

# アプリケーション設定
PORT=3000
NODE_ENV=production

# セキュリティ設定
SESSION_SECRET=your_session_secret_here

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL設定（Let's Encryptで自動設定される）
SSL_ENABLED=true

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# 監視設定
HEALTH_CHECK_INTERVAL=30000
MAX_MEMORY_USAGE=512

# メール通知設定（オプション）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ADMIN_EMAIL=admin@your-domain.com